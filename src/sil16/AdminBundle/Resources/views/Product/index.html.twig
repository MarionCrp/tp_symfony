{% extends "sil16AdminBundle::layout.html.twig" %}

{% block title %} Liste des produits {% endblock %}
{% block h1 %} Liste des produits {% endblock %}

{% block content %}

	<div id="dg">
		<div class="container">
			<a class="btn btn-default" href="{{ path('admin_product_new') }}"> Ajouter un produit </a>
      <div class="row centered">
        <br>
        <table class="table">
          <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Cat√©gorie</th>
            <th>Prix</th>
            <th>Stock</th>
            <th>Editer</th>
          </tr>
            {% for product in products %}
						{% if product.stock == 0 %}
              <tr class="danger">
						{% elseif product.stock < 10 %}
							<tr class="warning">
						{% else %}
							<tr class="">
						{% endif %}

                <td>{{ product.id }} </td>
                <td>{{ product.name }} </td>
                <td>{{ product.productCategory.name }} </td>
                <td>{{ product.price }} </td>
                <td>{{ product.stock }} </td>
                <td>
                  <a type="button" class="btn btn-primary" aria-label="Edit" href="{{ path("admin_product_edit", {"id": product.id}) }}">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                  </a>
                </td>
              </tr>
              {% endfor %}
        </table>

			</div><!-- row -->
		</div><!-- container -->
	</div><!-- DG -->

{% endblock %}
