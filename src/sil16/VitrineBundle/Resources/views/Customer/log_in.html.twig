{% extends "sil16VitrineBundle::layout.html.twig" %}

{% block title %} Connexion - Mes Lampes {% endblock %}
{% block h1 %} Connexion {% endblock %}

{% block content %}

  <div id="dg">
    <div class="container">
      <div class="row centered">
        <br>
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
          <div class="form-group">
            {{ form_label(form.email, "E-Mail", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
            <div class="col-sm-4">
              {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-sm-4 form_errors">{{ form_errors(form.email) }}</div>
            <div class="col-sm-4 form_errors">{{ form_errors(form.password) }}</div>
          </div>
          <div class="form-group">
            {{ form_label(form.password, "Mot de passe", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
            <div class="col-sm-4">
              {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
              {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}, 'label': "Se connecter" }) }}
            </div>
          </div>
          {{ form_end(form) }}

      </div><!-- row -->
    </div><!-- container -->
  </div><!-- DG -->
{% endblock %}
